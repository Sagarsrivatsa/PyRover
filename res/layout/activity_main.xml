<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sagarsrivatsa.roversweeper.MainActivity">

    <Button
        android:id="@+id/buttonup"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:text="UP" />

    <Button
        android:id="@+id/buttonri"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/buttonup"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:text="RIGHT" />

    <Button
        android:id="@+id/buttonle"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonri"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@+id/buttonup"
        android:layout_toStartOf="@+id/buttonup"
        android:text="LEFT" />

    <Button
        android:id="@+id/buttondo"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buttonup"
        android:layout_alignRight="@+id/buttonup"
        android:layout_below="@+id/buttonri"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/buttonle"
        android:text="DOWN" />

    <Button
        android:id="@+id/buttonst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttondo"
        android:layout_toEndOf="@+id/buttonle"
        android:layout_toRightOf="@+id/buttonle"
        android:text="STOP" />

</RelativeLayout>
